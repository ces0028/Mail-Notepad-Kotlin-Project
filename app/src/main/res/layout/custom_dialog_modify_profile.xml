<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialogHead"
    android:padding="10dp"
    android:background="@drawable/item_border_line_main2">

    <LinearLayout
        style="@style/matchWrap"
        android:background="@drawable/item_border_line_white"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCustomiseProfile"
                style="@style/customiseProfile" />

            <ImageView
                android:id="@+id/ivClose"
                style="@style/ivClose"
                android:background="@drawable/item_border_line_white"
                app:srcCompat="@drawable/ic_close"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/matchMatch"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <Button
                android:id="@+id/btnModifyName"
                style="@style/btnOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/modifyName" />

            <Button
                android:id="@+id/btnModifyImage"
                style="@style/btnOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/modifyImage" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>