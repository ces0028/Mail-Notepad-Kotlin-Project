<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/matchWrap"
    android:background="@drawable/item_border_line_white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivStar"
            style="@style/icon"
            android:background="@drawable/item_border_line_white"
            app:srcCompat="@drawable/ic_star_blank" />

        <ImageView
            android:id="@+id/ivShare"
            style="@style/icon"
            android:background="@drawable/item_border_line_white"
            android:layout_toStartOf="@id/ivClose"
            app:srcCompat="@drawable/ic_sharing" />

        <ImageView
            android:id="@+id/ivClose"
            style="@style/ivClose"
            android:background="@drawable/item_border_line_white"
            app:srcCompat="@drawable/ic_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/item_border_line_main2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDateTime"
            style="@style/emailRight" />

    </LinearLayout>

    <LinearLayout
        style="@style/showLayout"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/tvContent"
            style="@style/content" />

    </LinearLayout>

    <LinearLayout
        style="@style/btnLayout"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnDelete"
            style="@style/btnClose"
            android:text="@string/delete" />

        <Button
            android:id="@+id/btnRewrite"
            style="@style/btnOther"
            android:text="@string/modify" />

    </LinearLayout>

</LinearLayout>